<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/startStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Station ID"
        android:inputType="number" />

    <EditText
        android:id="@+id/endStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Station ID"
        android:inputType="number" />

    <Button
        android:id="@+id/bfsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum Stations (BFS)"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/astarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum Transfer Time (A*)"
        android:layout_marginTop="8dp" />
</LinearLayout>
